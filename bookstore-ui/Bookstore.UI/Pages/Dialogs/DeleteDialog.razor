<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6" Align="Align.Center">
            <MudIcon Class="mr-3 mb-n1"/>
            Delete @Entity
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText Typo="Typo.body1">
            Are you sure you want to delete this @Entity? <br> This process cannot be undone.
        </MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Default" Variant="Variant.Filled" OnClick="@Cancel">Cancel</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Error" OnClick="@OpenDeleteDialog">Delete</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] 
    private MudDialogInstance MudDialog { get; set; }

    [Parameter] 
    public string Entity { get; set; } = string.Empty;

    [Parameter] 
    public EventCallback<bool> OnCancel { get; set; }

    [Parameter] 
    public EventCallback<bool> OnOpenDeleteDialog { get; set; }

    private async Task Cancel() => await OnCancel.InvokeAsync();
    private async Task OpenDeleteDialog() => await OnOpenDeleteDialog.InvokeAsync();
}
